{% extends "adminLayout.html.twig" %}


{% block content %}

    <div class="container">
        <div class="row justify-content-center">
            <h2>Création d'un compte utilisateur</h2>
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-lg-4 col-10">
                <form method="post">
                    <div class="form-group w-20">
                        <label for="name">Nom</label>
                        <input type="text" class="form-control" autofocus id="name" name="name" placeholder="Nom">
                        <span>{{ errors.name }}</span>
                    </div>
                    <div class="form-group w-20">
                        <label for="firstname">Prénom</label>
                        <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Prénom">
                        <span>{{ errors.firstname }}</span>
                    </div>
                    <div class="form-group w-20">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" name="mail" placeholder="Email">
                        <span>{{ errors.mail }}</span>
                    </div>
            </div>
            <div class="col-lg-4 offset-lg-1 col-10">
                <div class="form-group w-20">
                    <label for="exampleInputPassword1">Mot de passe</label>
                    <input type="password" class="form-control" name="password" placeholder="Mot de passe">
                    <span>{{ errors.password }}</span>

                </div>
                <div class="form-group w-20">
                    <label for="exampleInputPassword2">Mot de passe</label>
                    <input type="password" class="form-control"  name="password_confirm" placeholder="Mot de passe">
                    <span>{{ errors.password2 }}</span>
                    <span>{{ errors.confirmation }}</span>
                </div>

                <div class="form-group w-20">
                    <label for="">Statut de l'utilisateur</label>
                    <select class="form-control" name="status_id">
                        <option value="1">Admin</option>
                        <option value="2">Utilisateur</option>
                    </select>
                </div>


                <div class="mt-2">
                    <button style="background-color: #5b8fa5; color: white" type="submit" class="btn btn-block">Créer le compte</button>
                </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}