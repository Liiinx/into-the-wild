{% extends 'adminLayout.html.twig' %}

{% block content %}

    <h1>Liste des Categories</h1>
    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Nom</th>
            <th>Nombre d'article</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name}}</td>
                <td>{{ category.quantity}}</td>
                <td>
                    <div class="row">
                        <div class="col-2">
                            <a type="button" href="/admin/category/edit/{{ category.id }}" class="btn btn-outline-secondary"><i class="fas fa-pencil-alt"></i></a>
                        </div>
                        <div class="col-2">
                            <a type="button" href="/admin/category/voir/{{ category.id }}" class="btn btn-outline-secondary"><i class="fas fa-eye"></i></a>
                        </div>
                        <div class="col-2">
                            <a type="button" href="/admin/category/delete/{{ category.id }}" class="btn btn-outline-warning"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}