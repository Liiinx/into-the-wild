{% extends 'adminLayout.html.twig' %}

{% block content %}

    <style type="text/css">
        @media screen and (max-width: 768px) {
            .page-title {
                text-align: center;
                padding-top: 15px;
                font-weight: bold;
                font-size: 20px;
            }
            .btn-add {
                text-align: center;
            }
        }
    </style>

    <div class="container">

        <div class="row">
            <div class="col-md-9">
                <h1 class="page-title animated fadeInLeft">Liste des catégories</h1>
                <hr>
            </div>

            <div class="col-md-3 btn-add">
                <div style="padding-bottom: 20px;">
                    <a href="/admin/category/add"><input type="submit" style="background-color: #6D909C; border-color: #6D909C;" class="btn btn-success animated tada" value="Ajouter catégorie"></a>
                </div>
            </div>
        </div>

        <table class="table table-responsive-sm animated fadeInRight">

            <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Nombre d'article</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name}}</td>
                    <td>{{ category.quantity}}</td>
                    <td>

                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a href="/category/{{ category.id }}" class="btn btn-outline-primary btn-sm"><i class="fas fa-eye"></i></a>
                            <a href="category/edit/{{ category.id }}" class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i></a>
                            <a onclick="deleteCategory({{ category.id }}, '{{ category.name }}')" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash"></i></a>
                        </div>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

    <script src="/assets/js/delete.js"></script>

{% endblock %}