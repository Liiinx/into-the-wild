{% extends 'adminLayout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-6">
            <h1>Liste des Categories</h1>
        </div>
        <div class="col-2 offset-3">
            <div style="padding-bottom: 20px;">
                <a href="/admin/category/add{{ category.id }}"><input type="submit" style="background-color: #6D909C; border-color: #6D909C;" class="btn btn-success" value="Ajouter une catÃ©gorie"></a>
            </div>
        </div>
    </div>


    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Nom</th>
            <th>Nombre d'article</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name}}</td>
                <td>{{ category.quantity}}</td>
                <td>
                    <div class="row">
                        <div class="col-2">
                            <a type="button" href="/admin/category/edit/{{ category.id }}" class="btn btn-outline-secondary"><i class="fas fa-pencil-alt"></i></a>
                        </div>

                        <div class="col-2">
                            <a type="button" href="/admin/category/{{ category.id }}" class="btn btn-outline-secondary"><i class="fas fa-eye"></i></a>
                        </div>


                        <div class="col-2">
                            <button type="button" class="btn btn-outline-warning" onclick="deleteCategory({{ category.id }}, '{{ category.name }}')">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script src="/assets/js/delete.js"></script>

{% endblock %}