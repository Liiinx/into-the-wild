{% extends 'adminLayout.html.twig' %}

{% block content %}

    <h1>Liste des commentaires</h1>
    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Contenu</th>
            <th>Article</th>
            <th>User</th>
            <th>Date / Heure</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr data-toggle="tooltip" data-placement="bottom" data-html="true" title="{{ comment.comment }}">
                <td>{{ comment.comment[:50] ~ '...'  }}</td>
                <td>{{ comment.title}}</td>
                <td>{{ comment.name}}</td>
                <td>{{ comment.date|date('d/m/Y H:i')}}</td>
                <td>
                    <button type="button" class="btn btn-outline-warning" onclick="deleteComment({{ comment.id }}, '{{ comment.comment[:50] ~ '...'  }}')">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <script src="/assets/js/delete.js"></script>

{% endblock %}