{% extends 'adminLayout.html.twig' %}

{% block content %}

    <h1>Liste des commentaires</h1>
    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Contenu</th>
            <th>Article</th>
            <th>User</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.title}}</td>
                <td>{{ comment.name}}</td>
                <td>
                    <a type="button" href="/admin/article/edit/{{ users.id }}" style="margin-right: 5px;" class="btn btn-outline-secondary"><i class="fas fa-pencil-alt"></i></a>

                    <a type="button" href="/admin/article/delete/{{ users.id }}" class="btn btn-outline-warning"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}