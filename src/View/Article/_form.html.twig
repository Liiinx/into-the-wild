<form method="post">

        <div class="form-group">
                <label for="titre">Titre de l'article : </label>
                <input type="text" name="titre" value="{{ article.titre }}" class="form-control" placeholder="Titre de votre article">
        </div>

        <div class="form-group">
                <label for="contenu">Contenu de l'article : </label>
                <textarea name="contenu" rows="6" cols="30" class="form-control" placeholder="Contenu de l'article">{{ article.contenu }}</textarea>
        </div>

        <div style="padding-bottom: 20px;">
                <input type="submit" style="background-color: #6D909C; border-color: #6D909C;" class="btn btn-success" value="Envoyer">
        </div>

</form>
