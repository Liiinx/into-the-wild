{% extends 'adminLayout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-6 col-12">
            <h1>Liste des Articles</h1>
        </div>
        <div class="col-md-2 offset-md-3 col-12">
            <div style="padding-bottom: 20px;">
                <a href="/admin/article/add{{ articles.id }}"><input type="submit" style="background-color: #6D909C; border-color: #6D909C;" class="btn btn-success" value="Ajouter un article"></a>
            </div>
        </div>
    </div>


    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Titre</th>
                <th class="coloneDisplay">Contenu</th>
                <th>Cat√©gorie</th>
                <th class="coloneDisplay">Date/Heure</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for articles in article %}
            <tr>
                <td style="max-width: 230px">{{ articles.title }}</td>
                <td style="max-width: 230px" class="coloneDisplay"> <span class="preview_content">{{ articles.content[:50] ~ '...' }}</span> </td>
                <td> <span class="preview_content">{{ articles.name}}</span> </td>
                <td class="coloneDisplay"> <span class="preview_content">{{ articles.date|date('d/m/Y H:i')}}</span> </td>

                <td>
                    <div class="row justify-content-center">
                        <div class="col-md-4 col-10">
                            <a type="button" href="/admin/article/edit/{{ articles.id }}" class="btn btn-outline-secondary"><i class="fas fa-pencil-alt"></i></a>
                        </div><div class="col-md-4 col-10">
                            <a type="button" href="/article/{{ articles.id }}" class="btn btn-outline-secondary"><i class="fas fa-eye"></i></a>
                        </div>
                        <div class="col-md-4 col-10">
                            <a type="button" href="/admin/article/delete/{{ articles.id }}" class="btn btn-outline-warning"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}