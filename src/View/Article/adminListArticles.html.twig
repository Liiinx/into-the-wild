{% extends 'adminLayout.html.twig' %}

{% block content %}


    <style type="text/css">
        @media screen and (max-width: 768px) {
            .page-title {
                text-align: center;
                padding-top: 15px;
                font-weight: bold;
                font-size: 20px;
            }
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <h1 class="page-title animated fadeInLeft">Liste des Articles</h1>
            </div>

            <div class="col-md-3">
                    <div style="padding-bottom: 20px;">
                        <a href="/admin/article/add{{ articles.id }}"><input type="submit" style="background-color: #6D909C; border-color: #6D909C;" class="btn btn-success" value="Ajouter un article"></a>
                    </div>
            </div>

        </div>

        <table class="table table-responsive-sm animated fadeInRight">
            <thead class="thead-dark">
            <tr>
                <th>Titre</th>
                <th class="coloneDisplay">Contenu</th>
                <th>Cat√©gorie</th>
                <th class="coloneDisplay">Date/Heure</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for articles in article %}
                <tr>
                    <td>{{ articles.title }}</td>
                    <td class="coloneDisplay"> <span class="preview_content">{{ articles.content[:50] ~ '...' }}</span> </td>
                    <td> <span class="preview_content">{{ articles.name}}</span> </td>
                    <td class="coloneDisplay"> <span class="preview_content" style="font-size: 15px;">{{ articles.date|date('d/m/Y H:i')}}</span></td>

                    <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a href="/article/{{ articles.id }}" class="btn btn-outline-primary btn-sm"><i class="fas fa-eye"></i></a>
                                <a href="admin/edit/{{ articles.id }}" class="btn btn-outline-warning btn-sm"><i class="fas fa-edit"></i></a>
                                <a onclick="deleteArticle({{ articles.id }}, '{{ articles.title }}')" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash"></i></a>
                            </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

<script src="/assets/js/delete.js"></script>

{% endblock %}