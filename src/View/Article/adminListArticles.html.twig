{% extends 'adminLayout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-6">
            <h1>Liste des Articles</h1>
        </div>
        <div class="col-2 offset-4">
            <div style="padding-bottom: 20px;">
                <a href="/admin/article/add{{ articles.id }}"><input type="submit" style="background-color: #6D909C; border-color: #6D909C;" class="btn btn-success" value="Ajouter un article"></a>
            </div>
        </div>
    </div>


    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date / Heure</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for articles in article %}
            <tr>
                <td><h4>{{ articles.title }}</h4></td>

                <td> <span class="preview_content">{{ articles.content[:50] ~ '...' }}</span> </td>
                <td> <span class="preview_content">{{ articles.date}}</span> </td>

                <td>
                    <div class="row">
                        <div class="col-4">
                            <a type="button" href="/admin/article/edit/{{ articles.id }}" class="btn btn-outline-secondary"><i class="fas fa-pencil-alt"></i></a>
                        </div><div class="col-4">
                            <a type="button" href="/article/{{ articles.id }}" class="btn btn-outline-secondary"><i class="fas fa-eye"></i></a>
                        </div>
                        <div class="col-4">
                            <a type="button" href="/admin/article/delete/{{ articles.id }}" class="btn btn-outline-warning"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}