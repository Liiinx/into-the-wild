{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Liste de nos articles</h1>


        <div class="card-deck">
            <div class="row">
    {% for articles in article %}
        <!-- <marquee scrollamount="350"> DEFILEMENT MARRANT-->
        <div class="col-3 card cardArticle p-2 flex-fill">
                <img class="card-img-top" src="/assets/images/lauriane.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ articles.titre  }}</h5>
                    <p class="card-text">{{ articles.contenu }}</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
    {% endfor %}
            </div>
        </div>

{% endblock %}
