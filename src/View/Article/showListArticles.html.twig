{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container mb-4">
    <h1><span class="firstLetter">L</span>iste de nos articles</h1>
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    {% for articles in article %}
                        <!-- <marquee scrollamount="350"> DEFILEMENT MARRANT--> 
                        <div class="col-xs-12 col-md-6 col-lg-6">
                            <div class="card p-3 m-2">
                                <a class="linkDeco" href="/article/{{ articles.id }}">
                                    <div>
                                        <img class="card-img-top imageArticle" src="/assets/images/{{ articles.imageName }}" alt="Card image cap">
                                    </div>
                                    <div class="card-body">
                                        <div class="cardTitle">
                                            <h5 class="card-title">{{ articles.title [:50] ~ '...' }}</h5>
                                        </div>
                                        <p class="card-text cardText">
                                            {% markdown %}
                                                {{ articles.content[:50] ~ '...' }}
                                            {% endmarkdown %}
                                        </p>
                                        <button type="button" class="btn btn-outline-secondary"><i class="fas fa-eye"></i> Lire</button>
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-3 mt-2">
                {% include 'User/category.html.twig' %}
            </div>
        </div>


        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">

                {% for i in range(1, nbPage) %}

                    <li class="page-item"><a class="page-link" href="{{ i }}">{{ i }}</a></li>

                {% endfor %}
            </ul>
        </nav>
    </div>

{% endblock %}