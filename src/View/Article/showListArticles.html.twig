{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Liste de nos articles</h1>


        <div class="card-deck ">
            <div class="row">
    {% for articles in article %}
        <!-- <marquee scrollamount="350"> DEFILEMENT MARRANT-->
        <div class="col-xs-12 col-md-6 col-lg-3 card cardArticle p-2 flex-fill">
                <img class="card-img-top imageArticle" src="/assets/images/lauriane.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ articles.titre  }}</h5>
                    <p class="card-text">{{ articles.contenu }}</p>
                    <a href="/article/{{ articles.id }}" target="_blank">
                     <!--c est pas responsive button -->
                        <button type="button" class="btn btn-secondary">En savoir plus...</button>
                    </a>
                </div>
            </div>
    {% endfor %}
            </div>
        </div>

{% endblock %}