{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container mb-4">
    <h1>Liste de nos articles</h1>
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    {% for articles in article %}
                        <!-- <marquee scrollamount="350"> DEFILEMENT MARRANT--> 
                        <div class="col-xs-12 col-md-6 col-lg-6">
                            <div class="card p-3 m-2">
                                <div>
                                    <img class="card-img-top imageArticle" src="/assets/images/{{ articles.imageName }}" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <div class="cardTitle">
                                        <h5 class="card-title">{{ articles.title [:50] ~ '...' }}</h5>
                                    </div>

                                    <p class="card-text cardText">{{ articles.content[:50] ~ '...' }}</p>
                                    <a href="/article/{{ articles.id }}">
                                        <button type="button" class="btn btn-secondary">Voir plus...</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-3 mt-2 offset-1">
                {% include 'User/category.html.twig' %}
            </div>
        </div>


        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">

                {% for i in range(1, nbPage) %}

                    <li class="page-item"><a class="page-link" href="{{ i }}">{{ i }}</a></li>

                {% endfor %}
            </ul>
        </nav>
    </div>

{% endblock %}