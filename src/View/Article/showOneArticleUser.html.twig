{% extends 'layout.html.twig' %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="row">
   
        <div class="col-12 col-lg-6 offset-1">

            <h2>Category : <span class="orange">Actualités à la Wild</span></h2>
        </div>
        <div class="col-12 col-lg-2 offset-2 mt-2">
            <a href="/articles">
                <button type="button" class="btn btn-secondary btn-sm">Liste articles</button>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-10 offset-1">
            <hr>
        </div>
    </div>
    <div class="row">

        <div class="col-12 col-md-4 offset-1">

            <img class="img-fluid" src="/assets/images/{{ articleComment[0].imageName }}" alt="">
        </div>
        <div class="col-12 col-md-6">
            <h1>{{ articleComment[0].title }}</h1>
            <p>{{ articleComment[0].content }}</p>
        </div>

    </div>
    <div class="row">
        <div class="col-10 offset-1">
            {% for comment in articleComment[1] %}
                <p>{{ comment.name }}</p>
                <p>{{ comment.comment }}</p>
                <a type="button" href="/comment/delete/{{ comment.id }}" class="btn btn-outline-warning"><i class="fas fa-trash-alt"></i></a>

            {% endfor %}

        </div>
    </div>
</div>
{% endblock %}