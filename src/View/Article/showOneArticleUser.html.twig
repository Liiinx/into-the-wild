{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12 col-lg-6">
            <h2>Categorie : <span class="orange">{{ categories[0].name }}</span></h2>
        </div>
        <div class="col-12 col-lg-2 offset-3 mt-2">
            <a class="orange" href="/articles">
                <button type="button" class="btn btn-secondary btn">Liste articles</button>
            </a>
        </div>
        <hr>
        <div class="row">
        <div class="col-md-8">
                <div class="">
                    <img class="img-fluid mr-3 mb-1 imgArticle" src="/assets/images/{{ article.imageName }}" alt="" >

                    <h1>{{ article.title }}</h1>
                    <p class="text-justify">{{ article.content|nl2br }}</p>
                    <br/>
                    <p class="text-justify publish py-3">Publié le {{ article.date|date('d/m/Y à H:i')}}</p>
            </div>
            <br/>
            <br/>
            <br/>
                <div class="row">
                    <div class="col-10 offset-1">
                        <form method="post">
                            <div class="form-group">
                                <label for="comment">Votre commentaire :</label>
                                {% if(session.user) %}
                                <textarea name="comment" rows="3" cols="30" class="form-control" placeholder="Votre commentaire"></textarea>
                                {% else %}
                                    <div class="card">
                                        <div class="card-body commentCard">
                                            <p>Vous devez vous connecter ou inscrire pour ajouter un commentaire à l'article.</p>
                                            <a style="text-decoration: none" href="/connexion">
                                                <button type="button" class="btn btn-secondary btn-sm">Connexion</button>
                                            </a>
                                            <a href="/inscription">
                                                <button type="button" class="btn btn-secondary btn-sm ml-3">Inscription</button>
                                            </a>
                                        </div>
                                    </div>
                                {%  endif %}
                            </div>
                            <div class="row justify-content-center pb-5">
                                {% if(session.user) %}
                                    <input type="submit" style="background-color: #6D909C; border-color: #6D909C;" class="btn btn-success" value="Envoyer">
                                {% endif %}
                            </div>
                        </form>
                    </div>
                </div>

                <div class="row">
                    {% for comment in comments %}
                        <div class="col-2 offset-1">

                            <h5>{{ comment.firstname ~ ' ' ~ comment.name }}</h5>
                            <span class="orange">{{ comment.date|date("d/m/Y") }}</span>
                        </div>

                        <div class="col-8 rounded bg-light mb-4">
                            <p class="p-2 text-justify">{{ comment.comment|nl2br }}</p>

                </div>
                    {% if(session.user) %}
                <div class="col-1 mb-4">
                    <a type="button" href="/comment/delete/{{ comment.id }}" class="btn btn-outline-warning"><i class="fas fa-trash-alt"></i></a>
                </div>
                    {% endif %}
                {% endfor %}

            </div>
            <div class="col-md-3 mt-5">
                {% include 'User/category.html.twig' %}
            </div>
        </div>
        <div class="col-md-3 mt-2 offset-1">
            {% include 'User/category.html.twig' %}
        </div>
        </div>
    </div>
{% endblock %}