{% extends 'layout.html.twig' %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="row">
   
        <div class="col-12 col-lg-6 offset-1">

            <h2>Category : <span class="orange">Actualités à la Wild</span></h2>
        </div>
        <div class="col-12 col-lg-2 offset-2 mt-2">
            <a href="/articles">
                <button type="button" class="btn btn-secondary btn-sm">Liste articles</button>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-10 offset-1">
            <hr>
        </div>
    </div>
    <div class="row">

        <div class="col-12 col-md-4 offset-1">

            <img class="img-fluid" src="/assets/images/pollen_colorized.jpg" alt="pollen">

        </div>
        <div class="col-12 col-md-6">
            <h1>{{ article.titre }}</h1>
            <p class="motcoupe">{{ article.contenu }}</p>

        </div>

    </div>
</div>
{% endblock %}