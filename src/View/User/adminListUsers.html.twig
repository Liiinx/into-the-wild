{% extends 'adminLayout.html.twig' %}

{% block content %}

    <h1>Liste des utilisateurs</h1>
    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Nom</th>
            <th>PrÃ©nom</th>
            <th>Mail</th>
            <th>Statut</th>
            <th>Date d'inscription</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.statusid == "1" ? 'Admin' : "Utilisateur" }}</td>
                <td>{{ user.date|date("d/m/Y") }}</td>
                <td>
                    <button type="button" class="btn btn-outline-warning" onclick="deleteUser({{ user.id }}, '{{ user.name }}', '{{ user.firstname }}')">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script src="/assets/js/delete.js"></script>

{% endblock %}