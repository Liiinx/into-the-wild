{% extends 'adminLayout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-lg-6 col-10">
            <h1>Liste des utilisateurs</h1>
        </div>
        <div class="col-lg-2 offset-lg-3 col-10">
            <div style="padding-bottom: 20px;">
                <a href="/admin/user/add"><input type="submit" style="background-color: #6D909C; border-color: #6D909C;" class="btn btn-success" value="Ajouter un utilisateur"></a>
            </div>
        </div>
    </div>



    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Nom</th>
            <th class="coloneDisplay">PrÃ©nom</th>
            <th class="">Mail</th>
            <th>Statut</th>
            <th class="coloneDisplay">Date d'inscription</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td class="coloneDisplay">{{ user.firstname }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.statusid == "1" ? 'Admin' : "Utilisateur" }}</td>
                <td class="coloneDisplay">{{ user.date|date("d/m/Y") }}</td>
                <td>
                    <a type="button" href="/admin/user/delete/{{ user.id }}" class="btn btn-outline-warning"><i class="fas fa-user-times"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}