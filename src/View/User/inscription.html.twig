{% extends 'layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="offset-1 col-10">
        <h1>Inscription</h1><hr/>
    </div>

    <div class="row justify-content-center mt-3">
            <div class="col-lg-4 col-9">
             <form method="post">
                <div class="form-group w-20">
                    <label for="name">Nom</label>
                    <input type="text" class="form-control" autofocus id="name" name="name" placeholder="Nom">
                    <span>{{ errors.name }}</span>
                </div>
                <div class="form-group w-20">
                    <label for="firstname">Prénom</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Prénom">
                    <span>{{ errors.firstname }}</span>
                </div>
                <div class="form-group w-20">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" name="mail" placeholder="Email">
                    <span>{{ errors.mail }}</span>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-1 col-9">
                <div class="form-group w-20">
                    <label for="exampleInputPassword1">Mot de passe</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Mot de passe">
                    <span>{{ errors.password }}</span>

                </div>
                <div class="form-group w-20">
                    <label for="exampleInputPassword2">Mot de passe</label>
                    <input type="password" class="form-control" id="exampleInputPassword2" name="password2" placeholder="Mot de passe">
                    <span>{{ errors.password2 }}</span>
                    <span>{{ errors.confirmation }}</span>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-outline-secondary"><i class="fas fa-share-square"></i> Inscription</button>
                </div>
            </form>
            </div>
    </div>
</div>



{% endblock %}