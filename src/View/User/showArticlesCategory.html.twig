{% extends 'layout.html.twig' %}

{% block content %}
<div class="container mb-4">
    <h1>Categorie : {{ articleCategory[0].name }}</h1>
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    {% for value in articleCategory %}
                        <div class="col-xs-12 col-md-6 col-lg-6">
                            <div class="card p-3 m-2">
                                <div>
                                    <img class="card-img-top imageArticle" src="/assets/images/{{ value.imageName }}" alt="Card image cap">
                                </div>
                                <div class="card-body">
                                    <div class="cardTitle">
                                        <h5 class="card-title">{{ value.title [:100] ~ '...' }}</h5>
                                    </div>

                                    <p class="card-text cardText">{{ value.content[:50] ~ '...' }}</p>
                                    <a href="/article/{{ value.id }}">
                                        <button type="button" class="btn btn-secondary">Voir plus...</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-3 mt-2">
                {% include 'User/category.html.twig' %}
            </div>
        </div>

</div>

{% endblock %}